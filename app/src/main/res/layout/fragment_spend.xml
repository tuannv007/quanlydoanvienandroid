<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewmodel"
            type="com.haui.tuannv.qldv.ui.spend.SpendModelView"
            />

        <variable
            name="fragment"
            type="com.haui.tuannv.qldv.ui.spend.SpendFragment"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:text="Thu đoàn phí của sinh viên"
                android:textColor="@color/color_blue_800"
                android:textSize="@dimen/sp_20"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_30"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/title_faculty"
                            android:textSize="@dimen/sp_15"
                            />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_department"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="2"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/color_blue_800"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Niên khóa"
                            android:textSize="@dimen/sp_15"
                            />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_school_year"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="2"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/color_blue_800"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Năm học"
                            android:textSize="@dimen/sp_15"
                            />

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_fee"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="2"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/color_blue_800"
                        />

                    <Button
                        android:id="@+id/button_fillter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_30"
                        android:background="@color/color_blue_800"
                        android:gravity="center"
                        android:text="Lọc thông tin"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_colorNormal="@color/color_teal_500"
            fab:menu_colorPressed="@color/color_teal_500"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_showShadow="true"
            >

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_add"
                fab:fab_colorNormal="@android:color/white"
                fab:fab_colorPressed="@android:color/white"
                fab:fab_label="@string/title_spend_other"
                fab:fab_size="mini"
                />

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>


</layout>

